FROM alpine

# Setup SSHd Server
RUN apk --update --no-cache add openssh openrc
RUN rc-update add sshd
RUN rc-status
RUN touch /run/openrc/softlevel
RUN ssh-keygen -t ed25519 -f /etc/ssh/ssh_host_ed25519_key -N ''


# Random password for root
RUN pass=$(echo date +%s | sha256sum | base64 | head -c 32; echo | mkpasswd) && \
    echo "root:${pass}" | chpasswd

# Add key to be able for login (this is just a test, SAFE your private keys :D)
ADD ./tmp/id_rsa_docker_test.pub /root/.ssh/authorized_keys

                                   # Background 
ENTRYPOINT service sshd restart && tail -f /dev/null
